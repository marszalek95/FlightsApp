<form method="post">
    <div class="container col-md-3 ms-sm-auto px-md-4 mt-2">
        {% if form_errors(registrationForm.plainPassword) %}
            <div class="alert alert-danger">{{ form_errors(registrationForm.plainPassword) }}</div>
        {% endif %}
        <div class="card-group px-md-4">
          <!-- Login Card -->
          <div class="card">
            {{ form_start(registrationForm) }}
            <div class="card-body">
              <h5 class="card-title">Register</h5>
              <form>
                <div class="form-group">
                  <label for="email">Email address</label>
                  {{ form_widget(registrationForm.email) }}
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  {{ form_widget(registrationForm.plainPassword) }}
                </div>
                <div class="form-group">
                {{ form_row(registrationForm.agreeTerms) }}
                </div>
                <button button class="btn btn-primary mt-2" type="submit">Register</button>
              </form>
            </div>
            {{ form_end(registrationForm) }}
          </div>
        </div>
      </div>
</form>
{% endblock %}
